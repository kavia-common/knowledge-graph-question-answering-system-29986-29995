# Django settings
# NOTE: Do not commit real secrets. Copy this file to .env and fill values.
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# External URL used for generating absolute docs/openapi URLs if behind proxy
SITE_URL=http://localhost:8000

# Neo4j connection (official Python driver)
# Example bolt URI: bolt://localhost:7687 or neo4j+s://<your-host>:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=please-change

# Optional: set to INFO/DEBUG to increase logging verbosity if you add logging
LOG_LEVEL=INFO
