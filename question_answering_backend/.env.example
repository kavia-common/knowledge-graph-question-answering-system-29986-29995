# Django and service configuration
# SITE_URL is optional; if set, API docs will use it as the base URL in schema generation
SITE_URL=http://localhost:8000

# Neo4j connection settings (REQUIRED for running Cypher queries)
# Example for local Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=please_set_secure_password
# Optional: database name (defaults to 'neo4j')
NEO4J_DATABASE=neo4j
